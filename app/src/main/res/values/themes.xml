<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioFirebase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">
            @style/Theme.DesafioFirebase.TextInputStyle
        </item>
        <item name="editTextStyle">
            @style/Theme.DesafioFirebase.EditTextStyle
        </item>
    </style>

    <style name="Theme.DesafioFirebase.TextInputStyle" parent="Widget.Design.TextInputLayout">

    </style>

    <style name="Theme.DesafioFirebase.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.DesafioFirebase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DesafioFirebase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="background">@color/teal_500</item>
    </style>

    <style name="Theme.DesafioFirebase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>